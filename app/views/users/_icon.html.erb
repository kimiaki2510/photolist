<div class="card_profile">
  <div class="card-header">
      <% if @user.image? %>
        <%= image_tag @user.image.thumb.url, :alt => "avatar", :class => "icon_profile" %>
      <% else %>
        <%= image_tag("/assets/default.jpg", :alt => "avatar", :class => "icon_profile")%>
      <% end %>
  </div>
  <div class="card-title text-center">
    <%= link_to @user.name, user_path(@record.user) %>
  </div>
</div>

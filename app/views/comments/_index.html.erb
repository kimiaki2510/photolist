<!-- コメント2行   -->
<%= comments.count %>
<h6 class="more" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">もっと見る..</h6>
<% comments.first(2).each do |comment| %>
  <% unless comment.id.nil? %>
    <li class="comment-container">
      <div class="comment-box">
        <div class="comment-avatar">
          <!-- イメージ画像-->
        </div>
        <div class="comment-text">
          <!-- ユーザー情報 -->
          <div class="comment-entry">
            <%= comment.content %>
            <% if comment.user == current_user %>
              <%= link_to record_comment_path(comment.record_id, comment.id), method: :delete, remote: true, class="comment_destroy" do %>
                <i class="fas fa-trash" style="color: black;"></i>
              <% end %>
            <% end %>
          </div>
          <span class="comment-data pull-right">
            <%= comment.created_at.strftime('%Y%m%d %H:%M:%S')%>
          </span>
        </div>
      </div>
    </li>
  <% end %>
<% end %>
<!-- コメント3行目以降  -->
<div class="collapse" id="collapseExample">
  <% comments.offset(2).each do |comment| %>
    <% unless comment.id.nil? %>
      <li class="comment-container">
        <div class="comment-box">
          <div class="comment-avatar">
            <!-- 画像 -->
          </div>
          <div class="comment-text">
            <!-- ユーザー-->
            <div class="comment-entry">
              <%= comment.content %>
              <% if comment.user == current_user %>
                <%= link_to record_comment_path(comment.record_id, comment.id), method: :delete, remote: true, class: "comment_destroy" do %>
                  <li class="fas fa-trash" style="color: black;"></li>
                <% end %>
              <% end %>
            </div>
            <span class="comment-data pull-right">
              <%= comment.created_at.strftime('%Y%m%d %H:%M:%S')%>
            </span>
          </div>
        </div>
      </li>
    <% end %>
  <% end %>
</div>

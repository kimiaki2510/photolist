<!-- いいね判断 -->

  <% if record.like_user(current_user) %>
    <%= link_to  record_like_path(record ,current_user), method: :delete, remote: true do %>
      <i class="fas fa-heart"></i>
    <% end %>
  <% else %>
    <%= link_to record_likes_path(record_id: record.id), method: :post, remote: true do %>
      <i class="far fa-heart"></i>
    <% end %>
  <% end %>

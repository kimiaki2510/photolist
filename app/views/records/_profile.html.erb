<ul class="list-unstyled">
  <li class="media mb-3">
    <div class="media-body">
      <table class="table">
        <% records.each do |record| %>
          <tr>
            <%= link_to record_path(record.id)do %>
              <%= image_tag record.photo.thumb200.url %>
            <% end %>
            <!-- モーダルのトリガー-->
            <%= image_tag record.photo.thumb200.url, class: "img-responsive thumbnail　aligncenter size-full wp-image-425", data: {toggle: "modal", target: "#image_Modal"}, style: "cursor:pointer" %>
            <div class="modal fade" id="image_Modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
              <!-- モーダルのdialogー-->
              <div class="modal-dialog modal-lg modal-middle">
                <div class="modal-content card">
                  <div class="modal-header card-header">
                    <%= image_tag record.user.image.thumb.url, :alt => "avatar", :class => "icon_profile_show" %>
                    <h5 class="card-titleshow"><%= record.title %></h5>
                    <div class="card-title-showname text-center">
                      <%= record.user.name %>
                    </div>
                  </div>
                  <div class="modal-body">
                    <%= image_tag record.photo.thumb200.url, alt: "baby-1151351_1920", width: "400", height: "300", class: "aligncenter size-full wp-image-425", alt: "baby-1151351_1920" %>
                      <p class="card-text"><%= record.content %></p>
                  </div>
                  <div class="modal-footer">
                    <%= render 'likes/like_form', record: record %>
                    <%= link_to record_path(record), method: :delete do %>
                      <i class="fas fa-trash-alt"></i>
                    <% end %>
                    <button type="button" class="btn btn-success" data-dismiss="modal">閉じる</button>
                  </div>
                </div>
              </div>
            </div>
          </tr>
        <% end %>
      </table>
    </div>
  </li>
  <%= paginate records %>
</ul>

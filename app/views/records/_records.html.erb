<div class="container">
  <% records.each do |record| %>
    <div class="row">
      <div class="col-md-4  img-hidden media-body">
        <div class="field">
          <div class="card_profile">
            <div class="card-header">
                <% if record.user.image? %>
                  <%= image_tag record.user.image.thumb.url, :alt => "avatar", :class => "icon_profile" %>
                <% else %>
                  <%= image_tag("/assets/default.jpg", :alt => "avatar", :class => "icon_profile")%>
                <% end %>
            </div>
            <div class="card-title text-center">
              <%= link_to record.user.name, user_path(@record.user) %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <span class="text-muted">
          <%= link_to record.title, record_path(record.id) %>
        </span>
        <div class="field">
          <p>
            <%= link_to record_path(record.id)do %>
              <%= image_tag record.photo.thumb200.url%>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
  <%= paginate records %>
</div>

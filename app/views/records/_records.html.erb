<div class="container">
  <% records.each do |record| %>
    <div class="row card">
      <div class="col-md-4  img-hidden media-body">
        <div class="field">
          <div class="card_profile">
            <div class="card-header">
                <% if record.user.image? %>
                  <%= image_tag record.user.image.thumb.url, :alt => "avatar", :class => "icon_profile"%>
                <% else %>
                  <%= image_tag("/assets/default.jpg", :alt => "avatar", :class => "icon_profile")%>
                <% end %>
            </div>
            <div class="card-title text-center">
              <%= link_to record.user.name, user_path(record.user) %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-8 card-body">
        <span class="text-muted card-title">
          <%= record.title %>
        </span>
        <div class="field">
          <p>
            <%= image_tag record.photo.thumb200.url%>
          </p>
        </div>
      </div>
      <%= render 'likes/like_form', record: record %>
    </div>
  <% end %>
  <%= paginate records %>
</div>

<p>良い写真取れましたか?</p>
<%= debug @record %>
<%= form_for(@record) do |f|%>
  <div class="form-group">
    <%= f.label :title, 'タイトル'%>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :photo, '写真' %>
    <%= f.file_field :photo, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content, '感想' %>
    <%= f.text_area :content, class: 'form-control', rows:10 %>
  </div>
  <%= f.submit '投稿する' %>
<% end %>
<%= link_to 'タイムラインに戻る', root_url %>
